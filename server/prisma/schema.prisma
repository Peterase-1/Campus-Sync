generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String               @id @default(uuid())
  email        String               @unique
  password     String
  name         String
  university   String
  major        String
  createdAt    DateTime             @default(now())
  preferences       String?              // Stored as JSON string
  habits            Habit[]
  transactions      FinanceTransaction[]
  notes             StudyNote[]
  tasks             StudyTask[]
  goals             Goal[]
  classes           Class[]
  attendance        Attendance[]
  pomodoroSessions  PomodoroSession[]
  quickNotes        QuickNote[]
}

model Goal {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  title       String
  description String?
  category    String    // 'personal' | 'academic' | 'career' | 'health'
  targetDate  DateTime?
  progress    Int       @default(0) // 0-100
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model Habit {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  name          String
  description   String?
  frequency     String
  completed     Boolean   @default(false)
  streak        Int       @default(0)
  createdAt     DateTime  @default(now())
  lastCompleted DateTime?
}

model FinanceTransaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String // 'income' | 'expense'
  amount      Float
  description String
  category    String
  date        DateTime @default(now())
}

model StudyNote {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  content   String
  subject   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StudyTask {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  title       String
  description String?
  priority    String // 'low' | 'medium' | 'high'
  dueDate     DateTime?
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model Class {
  id          String       @id @default(uuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  name        String
  code        String?
  professor   String?
  location    String?
  dayOfWeek   Int // 0-6 (Sun-Sat)
  startTime   String // HH:MM format
  endTime     String
  color       String       @default("#10b981")
  semester    String?
  credits     Int?
  createdAt   DateTime     @default(now())
  attendance  Attendance[]
}

model Attendance {
  id      String   @id @default(uuid())
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  classId String
  class   Class    @relation(fields: [classId], references: [id])
  date    DateTime
  present Boolean
  notes   String?
}

model PomodoroSession {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  taskName  String?
  duration  Int // minutes
  completed Boolean   @default(false)
  type      String // 'work' | 'break'
  startedAt DateTime  @default(now())
  endedAt   DateTime?
}

model QuickNote {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  content   String // Markdown or rich text
  tags      String[] // Array of tags
  pinned    Boolean  @default(false)
  archived  Boolean  @default(false)
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
